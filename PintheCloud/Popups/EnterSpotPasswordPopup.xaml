<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Utilities="clr-namespace:PintheCloud.Utilities" 
    x:Class="PintheCloud.Popups.EnterSpotPasswordPopup"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="400"
	d:DesignHeight="240" >
    
	<Grid x:Name="LayoutRoot" Background="White">
		<Border BorderBrush="#FFCED7DD" BorderThickness="1"/>
		<StackPanel Margin="0,50,0,0" HorizontalAlignment="Center">
			<TextBlock TextWrapping="Wrap" Text="TextBlock"/>
			<TextBox Height="72" TextWrapping="Wrap" Text="TextBox"/>
			<Utilities:ImageButton 
			ImageSource="/Assets/pajeon/at_here/png/input_set_button_activated.png"
			ImageDisabledSource="/Assets/pajeon/at_here/png/input_set_button_inactivated.png"
			ImagePressedSource="/Assets/pajeon/at_here/png/input_set_button_activated_p.png"
			Style="{StaticResource ImageButtonStyle}" x:Name="uiSubmitPasswordButton" IsEnabled="True" />
		</StackPanel>

	</Grid>
</UserControl>