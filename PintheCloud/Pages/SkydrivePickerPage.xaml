<local:PtcPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PintheCloud.Pages"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    x:Class="PintheCloud.Pages.SkyDrivePickerPage"
	mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" 
    Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
	shell:SystemTray.Opacity="0" >


    <local:PtcPage.ApplicationBar>
        <shell:ApplicationBar x:Name="uiAppBar" BackgroundColor="#FFEFF2F6" Opacity="0.9" IsMenuEnabled="True" ForegroundColor="#FF878E8E">
            
            <shell:ApplicationBarIconButton x:Name="uiAppBarMapButton" IsEnabled="True" Text="confirm" Click="uiAppBarConfirmButton_Click" IconUri="/Assets/AppBar/check.png"/>
            
        </shell:ApplicationBar>
    </local:PtcPage.ApplicationBar>
    <!--LayoutRoot는 모든 페이지 내용이 배치되는 루트 표입니다.-->
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#FF00A4BF">
            <Image Source="/Assets/pajeon/png/general_logo.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>
        <!--TitlePanel에는 응용 프로그램 이름 및 페이지 제목이 포함됩니다.-->

        <!--ContentPanel - 여기에 추가 내용을 배치합니다.-->
        <Grid x:Name="ContentPanel" Grid.Row="1">
            <Grid.Resources>
                <DataTemplate x:Key="uiSkyDriveFileListItemTemplate">
                    <Grid x:Name="uiSkyDriveFileListItem">
                    	<Grid.RowDefinitions>
                    		<RowDefinition/>
                    		<RowDefinition Height="1"/>
                    	</Grid.RowDefinitions>
                    	<StackPanel Orientation="Horizontal">
                            <Image x:Name="uiSkyDriveFileThumnail" Source="/Assets/pajeon/png/general_like.png"/>
                    		<TextBlock x:Name="uiSkyDriveFileName" Text="{Binding Name}" TextWrapping="Wrap" FontSize="53.333" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFA80000"/>
                    	</StackPanel>
                    	<Grid Grid.Row="1" Background="#FFCED7DD"/>
                    </Grid>
                </DataTemplate>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="72"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
            	<Button x:Name="uiTreeupBtn" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" BorderBrush="Black" Click="uiTreeupBtn_Click"/>
            	<TextBlock x:Name="uiCurrentPath" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Black" Margin="158,23,0,0" Width="312"/>
            </Grid>
            <phone:LongListSelector x:Name="uiSkyDriveFileList" ItemsSource="{Binding}" ItemTemplate="{StaticResource uiSkyDriveFileListItemTemplate}" Grid.Row="1" SelectionChanged="uiSkyDriveFileList_SelectionChanged" />
        </Grid>
    </Grid>

</local:PtcPage>